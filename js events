            <ul class="sidebar">
                 <li class="accordion__item">
					<h3>home</h3>
					<div class="accordion__content"></div>
                </li>
                <li class="accordion__item">
                        <h3>produkte</h3>
                        <div class="accordion__content">
                             <ul class="tabs">
